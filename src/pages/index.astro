---
import Main from "../layouts/main.astro";
import Searcheng from "../utils/sengine";
const Placeholder: string = `Enter a URL or search by query using ${Searcheng}`;
---

<script src="../utils/main.ts"></script>
<script src="../utils/cloak.ts"></script>
<Main>
  <h1 class="text-center w-full mt-0 text-5xl">Lunar</h1>
  <form
    id="sear"
    method="post"
    class="h-screen flex items-center justify-center"
  >
    <input
      id="input"
      class="bg-gray-500 w-96 h-8 rounded-md border-gray-700 border-2"
      type="text"
      placeholder={Placeholder}
    />
  </form>
</Main>
