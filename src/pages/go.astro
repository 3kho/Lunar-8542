---
import { LoaderCircle } from "lucide-astro";
---

<script is:inline src="./assets/u/bundle.js" defer></script>
<script is:inline src="./assets/u/config.js" defer></script>
<script src="../utils/go.ts"></script>
<body class="bg-gray-600"></body>
<div id="loading" class="h-screen flex flex-col items-center justify-center">
  <LoaderCircle class="w-8 h-8 animate-spin" />
  <p class="mt-4 text-center">
    Please wait while Lunar loads your content. Having issues? <a
      class="main__btn"
      href="https://github.com/Lunar-Services/Lunar/issues/new/choose"
      >Report it!</a
    >
  </p>
</div>
